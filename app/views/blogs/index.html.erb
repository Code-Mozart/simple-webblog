<p style="color: green" class="notice"><%= notice %></p>

<% content_for :title, "Blogs" %>

<h1>Blogs</h1>

<div id="blogs" class="vertical-container">
  <% @blogs.each do |blog| %>
    <div class="border">
      <%= render partial: "blogs/blog_preview", locals: {blog: blog} %>
      <p>
        <%= link_to "Show this blog", blog %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New blog", new_blog_path, class: "button" %>
